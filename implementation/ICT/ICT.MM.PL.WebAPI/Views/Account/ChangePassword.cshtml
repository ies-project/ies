@model ICT.MM.DAL.DB.Models.Account

@{
    ViewData["Title"] = "Change Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Alterar Palavra Passe</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ChangePassword">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Name" />
            <input type="hidden" asp-for="Username" />
            <input type="hidden" asp-for="Role" />
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Password" />

            <div class="form-group">
                <label class="control-label">Introduza a palavra passe atual</label>
                <input name="CurPass" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Introduza a nova palavra passe</label>
                <input name="NewPass1" class="form-control" />
                @if (ViewBag.ErrorPassNotStrong != null)
                {
                    <span class="text-danger">@ViewBag.ErrorPassNotStrong</span>
                }
            </div>
            <div class="form-group">
                <label class="control-label">Introduza novamente a nova palavra passe</label>
                <input name="NewPass2" class="form-control" />
                @if (ViewBag.ErrorPassDiff != null)
                {
                    <span class="text-danger">@ViewBag.ErrorPassDiff</span>
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Home">Voltar á página Inicial</a>
</div>