<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SOA for Safety</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Veterinarios.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SOA for Safety</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        @if (User.Identity.IsAuthenticated) {
                            //Se existir utilizador autenticado
                            <a class="btn" asp-action="Logout" asp-controller="Account">Logout</a>
                                <a class="btn"  asp-controller="Devices">Devices</a>
                                <a class="btn" asp-action="Index" asp-controller="DeviceTypes">DeviceTypes</a>
                                <a class="btn" asp-action="Index" asp-controller="Scenarios">Scenarios</a>
                                <a class="btn" asp-action="Index" asp-controller="ScenarioDevices">ScenarioDevices</a>
                                @if (User.FindFirst("Role").Value == "Root")
                                {
                                    <a class="btn" asp-action="Index" asp-controller="AccountManagement">Gerir</a>
                                }
                        } else {
                            //Se não existir utilizador autenticado
                            <a class="btn" asp-action="Registration" asp-controller="Account">Register</a>
                            <a class="btn" asp-action="Login" asp-controller="Account">Login</a>


                        }
                        </li>
                    </ul>
                    @*
                        permite os links de autenticação
                        allows authentication links   *@
                    <!--<partial name="_LoginPartial" />-->
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @* imports View code *@
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - SOA for Safety - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>

            
       
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>