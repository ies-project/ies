@model ICT.MM.DAL.DB.ScenarioDevice

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Eliminar</h1>

<h3>Tem certeza de que deseja eliminar?</h3>
<div>
    <h4>Cenário Dispositivo</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ManufacturedDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ManufacturedDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LastMaintenanceDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastMaintenanceDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MaintenanceDueDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaintenanceDueDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OriginalState)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OriginalState)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CurrentState)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CurrentState)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Scenario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Scenario.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Device)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Device.Description)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id_Scenario" />
        <input type="hidden" asp-for="Id_Device" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar á Lista</a>
    </form>
</div>
